document.addEventListener('DOMContentLoaded', () => {
    // --- Back/Logout Button Functionality ---
    const backBtn = document.getElementById('back-to-manage-team-btn');
    const logoutBtn = document.getElementById('dashboard-logout-btn');

    if(backBtn) {
        backBtn.addEventListener('click', () => {
            window.location.href = '/manage-team.html';
        });
    }
    
    // Note: A robust logout would likely call a function from auth.js
    // For this template, we'll just redirect.
    if(logoutBtn) {
        logoutBtn.addEventListener('click', () => {
            console.log("Logout initiated");
            // In a real app: import { handleSignOut } from './auth.js'; handleSignOut();
            window.location.href = '/index.html'; 
        });
    }

    // --- Tab Switching Logic ---
    const tabContainer = document.querySelector('.profile-main-content');
    if(tabContainer) {
        const tabLinks = tabContainer.querySelectorAll('.tab-link');
        const tabPanels = tabContainer.querySelectorAll('.tab-panel');

        tabLinks.forEach(link => {
            link.addEventListener('click', () => {
                const tabId = link.getAttribute('data-tab');

                // Update active state for links
                tabLinks.forEach(item => item.classList.remove('active'));
                link.classList.add('active');

                // Show/hide tab panels
                tabPanels.forEach(panel => {
                    if (panel.id === tabId) {
                        panel.classList.add('active');
                    } else {
                        panel.classList.remove('active');
                    }
                });
            });
        });
    }
});
